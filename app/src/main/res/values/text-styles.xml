<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="baseText">
        <item name="android:layout_marginTop">@dimen/top_margin_text_view</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="regularText" parent="baseText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="weakText" parent="baseText">
        <item name="android:textColor">@color/weakText</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>


    <style name="regularTextHeader" parent="baseText">
        <item name="android:textSize">@dimen/text_header_size</item>
    </style>


</resources>